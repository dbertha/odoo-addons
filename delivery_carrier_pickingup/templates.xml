<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <template id="checkout_pickingup" name="Remove Delivery Address when pickup" inherit_id="website_sale.checkout">
        <xpath expr="//div[@t-if='not only_services']" position="attributes">
        <attribute name="t-if">not only_services and not (delivery_id.is_pickup and delivery_id.address_partner)</attribute>
        </xpath>
    </template>
    </data>
</openerp>
