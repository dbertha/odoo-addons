<?xml version="1.0"?>
<openerp>
<data>
    <template id="checkout_delivery_date" name="Delivery Date" inherit_id="website_sale.checkout">
        <xpath expr="//div[contains(concat(' ',@class,' '),'js_shipping')]" position="after">
                <div class="col-lg-5 col-sm-6">
                <h4>Choose your delivery or pick-up date</h4>
                        <!--
                       <select name="delivery_date" class="form-control">
                          <option value="">Date...</option>
                          <t t-foreach="acceptable_delivery_datetimes or []" t-as="date">
                              <option><t t-esc="date"/></option>
                          </t>
                      </select>
                      <h4>Choose your Delivery Date 2</h4>
                      <span t-field="order.requested_delivery_date" t-field-options='{
                      "widget": "date"}'/>
                      -->
                    <t t-set="website_sale_order" t-value="website.sale_get_order()"/>
                    <select name="delivery_date" class="form-control">
                        <t t-foreach="website_sale_order.getDeliveryDates()" t-as="date">
                            <option t-att-value="date"><t t-esc="date"/></option>
                        </t>
                    </select>
                    
                    <select name="delivery_interval" class="form-control">
                        <t t-foreach="['10h00-14h30', '14h30-19h00']" t-as="interval">
                            <option t-att-value="interval"><t t-esc="interval"/></option>
                        </t>
                    </select>
                    <!--
                    <select name="delivery_half_hour" class="form-control">
                        <t t-foreach="['00-30', '30-59']" t-as="half_hour">
                            <option t-att-value="half_hour"><t t-esc="half_hour"/></option>
                        </t>
                    </select>
                    -->
                    <p>If you ask for pick-up today, products will be available after half an hour.</p>
