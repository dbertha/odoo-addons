<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<record id="delivery_carrier_withzips_form" model="ir.ui.view">
            <field name="name">delivery.carrier.withzips.form.view</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Destination']" position="inside">
                    <group name="delivery_zip" string="Zips">
                        <field name="zip_ids"/>
                        <field name="notif_partner_id"/>
                    </group>
                </xpath>
            </field>
    </record>

    
<record id="view_delivery_zips_form" model="ir.ui.view">
            <field name="name">delivery.zips.form.view</field>
            <field name="model">delivery.zips</field>
            <field name="arch" type="xml">
                <form string="Zips">
                    <sheet string="Destination">
                        <field name="name" attrs="{'readonly': True}"/>
                        <group string="Zip List">
                            <field name="zip_from"/>
                            <field name="zip_to"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
    </record>

<record id="action_delivery_zips_form" model="ir.actions.act_window">
            <field name="name">Delivery Zips</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">delivery.zips</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to define a new delivery zips.
              </p><p>
                Each delivery method can have several zip ranges allowed in ecommerce checkout form 
              </p>
            </field>
        </record>



<menuitem action="action_delivery_zips_form" id="menu_action_delivery_zips_form" parent="delivery.menu_delivery" sequence="1"/>
<menuitem action="action_delivery_zips_form" id="sale_menu_action_delivery_zips_form" parent="delivery.sale_menu_delivery" sequence="2"/>
    </data>
    
</openerp>
